{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/edit**",
        "destination": "/edit/index.html"
      },
      {
        "source": "/cv",
        "destination": "/cv/index.html"
      },
      {
        "source": "/app**",
        "destination": "/app/index.html"
      }
    ]
  }
}
